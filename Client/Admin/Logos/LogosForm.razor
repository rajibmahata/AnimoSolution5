@using Model.Shared.Entities
@inject IRepository repo

<EditForm Model="logos" OnValidSubmit="OnDataAnnotationsValidated">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label>Logo Name</label>
        <div>
            <InputText class="form-control" @bind-Value="logos.LogoName" />
        </div>
    </div>

    <div class="form-group">
        <InputImg Label="Image" ImagenURL="@imagenURL" SelectedImage="SelectedImage" CssClass="img256" />
    </div>

    <div class="form-group grid25x ">
        <label>Is Default published ?</label>
        <div>
            <InputCheckbox class="form-check" @bind-Value="@logos.isDefaultActive" />
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Save Changes</button>

</EditForm>

@code {
    [Parameter] public Logos logos { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }


    private string imagenURL;

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(logos.LogoFile))
        {

            imagenURL = logos.LogoFile; 
            logos.LogoFile = null;
        }
    }

    private void SelectedImage(string imageBase64)
    {
        logos.LogoFile = imageBase64;
        imagenURL = null;

    }

    private async Task OnDataAnnotationsValidated()
    {

        if (!string.IsNullOrEmpty(logos.LogoFile))
        {
            imagenURL = null;
        }

        await OnValidSubmit.InvokeAsync(null);
    }


}
