@using Model.Shared.Entities
@inject IRepository repo

<EditForm Model="firmas" OnValidSubmit="OnDataAnnotationsValidated">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label>Name</label>
        <div>
            <InputText class="form-control" @bind-Value="firmas.Name" />
        </div>
    </div>
    <div class="form-group" >
        <InputImg Label="Image" ImagenURL="@imagenURL" SelectedImage="SelectedImage" CssClass="img256" />

    </div>

    <div class="form-group">
        <label>Street Full Address</label>
        <div>
            <InputText class="form-control" @bind-Value="firmas.Address" />
        </div>
    </div>

    <div class="form-group">
        <label>Zip Code</label>
        <div>
            <InputText class="form-control" @bind-Value="firmas.Zip" />
        </div>
    </div>

    <div class="form-group">
        <label>Town - Stadt</label>
        <div>
            <InputText class="form-control" @bind-Value="firmas.Town" />
        </div>
    </div>
    <div class="form-group">
        <label>Land</label>
        <div>
            <InputSelect id="LandeId" @bind-Value="firmas.LandeId" class="form-control">
                <option value="0" selected>Please select...</option>
                @foreach (var pais in paises)
                {
                    <option value="@pais.LandeId.ToString()">@pais.LandeName</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="form-group">
        <label>Phone</label>
        <div>
            <InputText class="form-control" @bind-Value="firmas.Phone" />
        </div>
    </div>
    <div class="form-group">
        <label>Contact Person</label>
        <div>
            <InputText class="form-control" @bind-Value="firmas.ContactPerson" />
        </div>
    </div>
    <div class="form-group">
        <label>Contact Email</label>
        <div>
            <InputText class="form-control" @bind-Value="firmas.ContactEmail" />
        </div>
    </div>

    <div class="form-group grid25x ">
        <label>Is Active ?</label>
        <div>
            <InputCheckbox class="form-check" @bind-Value="@firmas.isActive" />
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Save Changes</button>

</EditForm>

@code {
    [Parameter] public Firmas firmas { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public List<Landes> paises { get; set; }

    private string imagenURL;

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(firmas.Logo))
        {
            imagenURL = firmas.Logo;
            firmas.Logo = null;
        }
    }

    private void SelectedImage(string imageBase64)
    {
        firmas.Logo = imageBase64;
        imagenURL = null;

    }

    private async Task OnDataAnnotationsValidated()
    {        

        if (!string.IsNullOrEmpty(firmas.Logo)) 
        {
            imagenURL = null;
        }

        await OnValidSubmit.InvokeAsync(null);
    }


}
